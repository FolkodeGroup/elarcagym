# .env ejemplo para backend

# Database Connection (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/el_arca_gym

# JWT Secret (genera uno seguro con: openssl rand -base64 32)
JWT_SECRET=supersecret
# Puedes cambiar el valor por una clave segura y única para producción

# Frontend URL (para CORS)
FRONTEND_URL=http://localhost:3000

# Configuración de SendGrid para envío de emails (opcional)
SENDGRID_API_KEY=TU_API_KEY_AQUI
EMAIL_FROM=notificaciones@tu-dominio.com

# Puerto del servidor (opcional)
PORT=4000

# Entorno (opcional)
NODE_ENV=development
